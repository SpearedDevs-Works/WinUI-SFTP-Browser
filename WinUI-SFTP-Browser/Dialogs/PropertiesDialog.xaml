<ContentDialog
    x:Class="WinUI_SFTP_Browser.PropertiesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Properties"
    CloseButtonText="Close"
    DefaultButton="Close">

    <StackPanel Spacing="12" Padding="0,12,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,12,8"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NameTextBlock" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,0,12,8"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TypeTextBlock" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Path:" FontWeight="SemiBold" Margin="0,0,12,8"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PathTextBlock" TextWrapping="Wrap" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Size:" FontWeight="SemiBold" Margin="0,0,12,8"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="SizeTextBlock" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Modified:" FontWeight="SemiBold" Margin="0,0,12,8"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ModifiedTextBlock" Margin="0,0,0,8"/>
        </Grid>
    </StackPanel>
</ContentDialog>
