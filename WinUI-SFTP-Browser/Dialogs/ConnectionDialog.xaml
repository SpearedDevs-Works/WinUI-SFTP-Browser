<ContentDialog
    x:Class="WinUI_SFTP_Browser.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Connect to SFTP Server"
    PrimaryButtonText="Connect"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <StackPanel Spacing="12" Padding="0,12,0,0">
        <TextBox x:Name="HostTextBox" Header="Host" PlaceholderText="example.com or 192.168.1.1"/>
        <NumberBox x:Name="PortNumberBox" Header="Port" Value="22" Minimum="1" Maximum="65535" SpinButtonPlacementMode="Inline"/>
        <TextBox x:Name="UsernameTextBox" Header="Username" PlaceholderText="Username"/>
        <PasswordBox x:Name="PasswordBox" Header="Password" PlaceholderText="Password"/>
    </StackPanel>
</ContentDialog>
